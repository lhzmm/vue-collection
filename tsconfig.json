{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowJs": true,
    "skipLibCheck": true,

    "paths": {
      "@/*":["./src/*"]
    }      
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "./components.d.ts"],
  "exclude": [
    "node_modules"
  ]
}