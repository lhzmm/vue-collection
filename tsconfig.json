{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "types": ["node"],
    "paths": {
      "@/*":["./src/*"]
    }      
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", "dist"
  ]
}